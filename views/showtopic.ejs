<%- include('header')%>
<%- include('menu')%>
<div class="container">
        <div class="container index">
                <div class="container search ">
                        <form class="form-inline text-right">
                        <input class="form-control mr-sm-2 " type="search" placeholder="Szöveg..." aria-label="Search">
                        <button class="btn btn-dark my-2 my-sm-0 " type="submit">Keresés</button>
                      </form>
                </div>
                <%- include('msg')%>
                <div class="container d-inline pb-5">
                    <div class="row ">
                        <div class="col-12 text-center d-inline-flex ">
                            <div class="col-3 bg-dark p-1 profile">
                             <p><%= data.topic.author %></p>
                                 <img class="img-fluid" src="<%= user.img %> " alt="profil-image">
                                 <div class="p-1">
                                    <%- include('user/rank')%>
                                 </div>
                            </div>
                            <div class="col-9 showtopic p-3 ">
                                <h1 class="p-1"><%= data.topic.title %></h1>
                             <p class="p-1 pt-3">Létrehozva: <%= data.topic.date.toLocaleString() %></p>
                             <p class="p-1 show-desc"><%= data.topic.desc %></p>
                             <% if(data.topic.author === user.username) { %>
                             <div class="d-flex align-items-end justify-content-end " style="height: 200px;">
                                <a href="#" class="m-1 p-2 badge badge-dark">Módosítás</a>
                                <a href="#" class="m-1 p-2 badge badge-dark">Törlés</a>
                              </div>
                              <% }%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container mt-3 mb-3">
                    <div class="row">
                        <div class="col-12 text-center">
                             <% data.topic.comments.forEach(function(comment){ %>
                                <div class="mb-3 row bg-info ">
                             <div class="col-3 d-inline bg-dark profile">
                                 <div class="p-2">
                                <p> <%= comment.author %> </p>
                                 </div>
                                <div class="pb-3">
                                    <img class="img-fluid" src="<%= user.img %> " alt="profil-image">
                                    <div class="p-1">
                                        <%- include('user/rank')%>
                                     </div>
                                </div>
                             </div>
                             <div class="col-9 d-inline p-3 showcomments">
                                <p class="p-content p-1">Elküldve: <%= comment.date.toLocaleString() %> </p> 
                                <p class=" p-1 show-desc"> <%= comment.desc %> </p>
                                <% if(comment.author === user.username) { %>
                                <div class="d-flex align-items-end justify-content-end " style="height: 200px;">
                                    <a href="#" class="m-1 p-2 badge badge-warning">Módosítás</a>
                                    <a href="/forum/<%= data.contentid %>/<%= data.forumid %>/<%= data.topicid %>/<%= comment.id%>/delete" class="m-1 p-2 badge badge-danger">Törlés</a>
                                  </div>
                                  <% }%>
                             </div>
                            </div>
                            <% }) %>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="container index">
                            <h2 class="text-center">Új hozzászólás</h2>
                            <div class="container d-flex justify-content-center">
                                <div class="row">
                                    
                                    <div class="control-group" id="fields">
                                        <label class="control-label" for="field1"></label>
                                        <div class="controls"> 
                                            <form action="/forum/<%= data.contentid %>/<%= data.forumid %>/<%= data.topicid %>/newcomment" method="POST" role="form" autocomplete="off">
                                                <input class="form-control" type="hidden" name="author" value="<%= user.username %>">
                                                <textarea cols="100" rows="5"class="form-control" type="text" name="desc" placeholder="Komment leírása..."></textarea>
                                                <button class="btn btn-dark btn-block mb-3">Küldés</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>      
               
        </div> 
</div>
<%- include('footer')%>