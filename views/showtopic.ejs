<%- include('header')%>
<%- include('menu')%>
<div class="container">
        <div class="container index">
                <div class="container search ">
                        <form class="form-inline text-right">
                        <input class="form-control mr-sm-2 " type="search" placeholder="Szöveg..." aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0 " type="submit">Keresés</button>
                      </form>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-12 text-center border border-primary d-flex d-inline">
                            <div class="col-3 mt-3">
                             <p><%= data.topic.author %></p>
                            </div>
                            <div class="col-9 ">
                                <h1><%= data.topic.title %></h1>
                             <p><%= data.topic.date.toLocaleString() %></p>
                             <p><%= data.topic.desc %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container mt-3 mb-3">
                    <div class="row">
                        <div class="col-12 text-center  mt-3">
                             <% data.topic.comments.forEach(function(comment){ %>
                                <div class="row mb-3 bg-primary">
                             <div class="col-3 d-inline">
                                <span> <%= comment.author %> </span>
                             </div>
                             <div class="col-7 d-inline">
                                <span> <%= comment.desc %> </span> 
                             </div>
                             <div class="col-2 d-inline">
                                <span> <%= comment.date.toLocaleString() %> </span> 
                             </div>
                            </div>
                            <% }) %>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="container index">
                            <h2 class="text-center">Új hozzászólás</h2>
                            <% if(data.error){ %>
                            <div class="alert alert-danger text-center col-12" role="alert">
                                <%= data.error %>
                                            </div>
                                            <%   } %>
                            <div class="container d-flex justify-content-center">
                                <div class="row">
                                    
                                    <div class="control-group" id="fields">
                                        <label class="control-label" for="field1"></label>
                                        <div class="controls"> 
                                            <form action="/forum/<%= data.contentid %>/<%= data.forumid %>/<%= data.topicid %>/newcomment" method="POST" role="form" autocomplete="off">
                                                <input class="form-control" type="text" name="author" placeholder="Neved">
                                                <textarea cols="100" rows="5"class="form-control" type="text" name="desc" placeholder="Komment leírása..."></textarea>
                                                <button class="btn btn-success btn-block mb-3">Küldés</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
            </div>      
               
        </div> 
</div>
<%- include('footer')%>