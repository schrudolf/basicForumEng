<%- include('../header')%>
    <div class="container d-flex justify-content-center pt-5 mb-3 ">
        <div class="row col-8 userform justify-content-center">
            <div>
                <h1 class="text-center mb-4">Elfelejtett jelszó</h1>
                <form action="/forum/forgot/newpw/<%= tokenid %>" method="POST" role="form" autocomplete="off">
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Új jelszó" required>
                    </div>  
                    <div class="form-group">
                        <input class="form-control" type="password" name="passwordre" placeholder="Új jelszó ismét" required>
                    </div>  
