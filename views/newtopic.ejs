<%- include('header')%>
<%- include('menu')%>
<div class="container">
        <div class="container index">
                <h2 class="text-center">Új Téma létrehozása </h2>
                <div class="container d-flex justify-content-center">
                    <div class="row">
                        <div class="control-group" id="fields">
                            <label class="control-label" for="field1"></label>
                            <div class="controls">
                                <%- include('msg')%> 
                                <form action="/forum/<%=id %>/<%=forumid %>/new" method="POST" role="form" autocomplete="off">
                                    <input class="form-control" type="text" name="title" placeholder="Tartalom neve...">
                                    <input class="form-control" type="hidden" name="author" value="<%= user.username %>">
                                    <textarea cols="100" rows="5" class="form-control" type="text" name="desc" placeholder="leírás..."></textarea>
                                    <button class="btn btn-success btn-block mb-3">Küldés</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-success btn-sm mb-3" href="/forum/<%= id %>/<%= forumid %>">Vissza</a>
           </div>
    </div>                 
<%- include('footer')%>