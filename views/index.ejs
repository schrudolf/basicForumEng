<%- include('header')%>
<%- include('menu')%>
<div class="container">
        <div class="container index">
                <h4 class="pt-2"><%- include('msg')%></h4> 
                      <div class="container">
                              <div class="row">
                                      <div class="col-6">
                                        <a href="#"><img style="max-height: 200px;" src="<%= user.img %>" alt="profile-img"></a>
                                      </div>
                                      <div class="col-6 text-right pt-3">
                                        <p>Felhasználó neved: <%= user.username %></p>
                                        <p>Email címed: <%= user.email %></p>
                                        <% if(user.rank === 2) { %>
                                                <p>Jogosultság: Admin</p>
                                                <% } %>
                                        <% if(user.rank === 1) { %>
                                                <p>Jogosultság: Moderátor</p>
                                                <% } else { %>
                                                        <p>Rang: Tag</p>  
                                                <%}%>
                                                <p>Adatok módosítása:</p>
                                                <button class="btn btn-warning" >Beállítások</button>
                                      </div>
                              </div>
                      </div>        
                <% content.forEach(function(data) { %>
                        <div class="container">
                                <div class="row">
                                        <div class="headforum col-12">
                                                <a href="<%= data.id%>/"><h1><%= data.title%></h1></a>
                                                  <p><%= data.desc%></p>
                                        </div>
                                </div>
                        </div>       
                <%  }); %>  
        </div>
        
</div>
<%- include('footer')%>
