<%- include('../header')%>
<%- include('../menu')%>
<div class="container">
        <div class="container index">
                <h2 class="text-center">Profilkép Módosítása</h2>
                <div class="container d-flex justify-content-center">
                    <div class="row">
                        <div class="control-group" id="fields">
                            <label class="control-label" for="field1"></label>
                            <div class="controls">
                                <%- include('../msg')%>
                                <form action="/forum/user/<%= user._id%>/edit" method="POST" role="form" autocomplete="off">
                                        <label>
                                            <input type="radio" name="img" value="/profilimages/profil-image01.jpg" checked>
                                            <img src="/profilimages/profil-image01.jpg">
                                          </label>
                                        <label>
                                            <input type="radio" name="img" value="/profilimages/profil-image02.jpg" checked>
                                            <img src="/profilimages/profil-image02.jpg">
                                          </label>
                                        <label>
                                            <input type="radio" name="img" value="/profilimages/profil-image03.jpg" checked>
                                            <img src="/profilimages/profil-image03.jpg">
                                          </label>
                                        <label>
                                            <input type="radio" name="img" value="/profilimages/profil-image04.jpg" checked>
                                            <img src="/profilimages/profil-image04.jpg">
                                          </label>
                                        <label>
                                            <input type="radio" name="img" value="/profilimages/profil-image05.jpg" checked>
                                            <img src="/profilimages/profil-image05.jpg">
                                          </label>
                                          <% if(user.upload){ %>
                                            <div>
                                              <p>Saját feltöltött:</p>
                                              <label>
                                                <input type="radio" name="img" value="/profilimages/avatar-<%= user.username%>.jpeg" checked>
                                                <img src="/profilimages/avatar-<%= user.username%>.jpeg" alt="Még nem töltöttél fel" >
                                              </label>
                                            </div>
                                          <% }%>
                                    <div class="text-center"> 
                                        <button style="width: 150px;" class="btn btn-warning mb-3">Mentés</button>
                                    </div>   
                                </form>
                                <div>
                                  <p>Saját fotó feltöltése:</p>
                                  <form action="/forum/user/<%= user._id%>/avatar" method="POST" enctype="multipart/form-data">
                                    <input type="file" name="avatar" />
                                    <div class="text-center"> 
                                      <button style="width: 150px;" class="btn btn-warning mb-3">Feltöltés</button>
                                  </div>
                                  </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-success btn-sm mb-3" href="/forum/">Vissza</a>
           </div>
    </div>                 
<%- include('../footer')%>