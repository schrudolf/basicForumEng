<%- include('header')%>
<%- include('menu')%>
<div class="container">
        <div class="container index">
                <div class="container search ">
                        <form class="form-inline text-right">
                                <a href="/forum/<%= topic.contentid %>/<%= topic.forumid %>/new"><i class="fa fa-plus" aria-hidden="true"></i></a>
                        <input class="form-control mr-sm-2 " type="search" placeholder="Szöveg..." aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0 " type="submit">Keresés</button>
                      </form>
                </div>
                <div class="container">
                    <div class="row">
                        <%- include('msg')%>
                    </div>
                </div>         
                <% topic.topic.topics.forEach(function(data) {  %>
                    <div class="container">
                        <div class="row ">
                            <div class="col-12 headforum ">
                              <a  href="/forum/<%= topic.contentid %>/<%= topic.forumid %>/<%= data.id %>"><p>
                                <p class="p-content title" ><%= data.title%></p>
                                <span>
                                    <p class="p-content desc" ><%= data.desc.slice(0, 75)%>...</p>
                                </span>
                                <div>
                                    <span>Létrehozta: </span>
                                    <p class="author p-content "><%= data.author%> </p>  
                                    <p class="date"><%= data.date.toLocaleString()%></p></a>
                                </div>    
                            </div>
                        </div>
                    </div>
                <%  });  %>  
                <h2> <%= topic.topics %>  </h2>
        </div> 
</div>
<%- include('footer')%>